<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.PlaceOrder">


    <Button

        android:id="@+id/mngitems"
        android:layout_width="152dp"
        android:layout_height="36dp"
        android:layout_below="@+id/list1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="127dp"
        android:layout_marginBottom="296dp"
        android:layout_x="250dp"
        android:layout_y="169dp"
        android:background="@color/deepSkyBlue"
        android:text="Manage items"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/white"
        tools:layout_editor_absoluteY="426dp" />

    <ListView
        android:id="@+id/list1"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:layout_x="0dp"
        android:layout_y="54dp"
        android:background="@color/lightgray" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_x="4dp"
        android:layout_y="22dp"
        android:text="Order Summary"
        android:textAlignment="center"
        android:textColor="@color/deepSkyBlue"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/totamount"
        android:layout_width="256dp"
        android:layout_height="66dp"
        android:layout_x="79dp"
        android:layout_y="217dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/add"
        android:layout_width="270dp"
        android:layout_height="41dp"
        android:layout_x="7dp"
        android:layout_y="285dp"
        android:text="TextView"
        android:textSize="20dp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/change"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_x="291dp"
        android:layout_y="283dp"
        android:background="@color/deepSkyBlue"
        android:text="Change Address"
        android:textColor="@color/white" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="174dp"
        android:layout_height="35dp"
        android:layout_x="222dp"
        android:layout_y="356dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_x="98dp"
        android:layout_y="538dp"
        android:background="@color/deepSkyBlue"
        android:text="Place your order"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_x="13dp"
        android:layout_y="361dp"
        android:text="Payment method"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/Promocode"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_x="9dp"
        android:layout_y="439dp"
        android:text="Promo-Code"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_x="151dp"
        android:layout_y="428dp"
        android:ems="10"
        android:hint="YOUR CODE HERE"
        android:inputType="textPersonName" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_x="319dp"
        android:layout_y="425dp"
        android:background="@color/white"
        app:srcCompat="@drawable/ic_add" />


</AbsoluteLayout>
